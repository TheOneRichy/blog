{
  "name": "mike-bifulco-blog",
  "description": "Just a place for me to put it all out into the world - mikebifulco.com",
  "version": "0.1.0",
  "author": "Mike Bifulco <hello@mikebifulco.com>",
  "license": "MIT",
  "scripts": {
    "analyze": "ANALYZE=true next build",
    "build": "next build && next-sitemap",
    "postbuild": "next-sitemap",
    "dev": "NODE_OPTIONS='--inspect' next dev",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "start": "next start",
    "lint": "next lint",
    "eslint-check": "eslint --print-config . | eslint-config-prettier-check",
    "prepare": "husky install"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.6.10",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@mdx-js/loader": "^1.6.22",
    "@mdx-js/mdx": "^1.6.22",
    "@mdx-js/react": "^1.6.22",
    "@next/bundle-analyzer": "^12.0.0",
    "@next/mdx": "^12.0.0",
    "date-fns": "^2.25.0",
    "dayjs": "^1.10.7",
    "fathom-client": "^3.2.0",
    "feed": "^4.2.2",
    "framer-motion": "^4",
    "gray-matter": "^4.0.3",
    "mdx-embed": "^0.0.22",
    "next": "^12.0.0",
    "next-mdx-remote": "^3.0.6",
    "pluralize": "^8.0.0",
    "prism-react-renderer": "^1.2.1",
    "prop-types": "^15.6.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remark": "^14.0.1",
    "remark-html": "^15.0.0",
    "sass": "^1.43.4",
    "sharp": "^0.29.2",
    "swr": "^1.0.1",
    "use-cloudinary": "^4.1.1"
  },
  "devDependencies": {
    "@netlify/plugin-nextjs": "4.0.0-beta.2",
    "@next/eslint-plugin-next": "^12.0.0",
    "eslint": "<8.0.0",
    "eslint-config-next": "^12.0.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": ">=7.0.4",
    "lint-staged": "^11.2.6",
    "netlify-plugin-cache-nextjs": "^1.6.1",
    "next-sitemap": "^1.6.192",
    "prettier": "^2.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mbifulco/blog"
  },
  "bugs": {
    "url": "https://github.com/mbifulco/blog/issues"
  },
  "lint-staged": {
    "*.{js,css,md}": [
      "prettier --write"
    ],
    "*.js": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,json,md}": "prettier --write"
  }
}
